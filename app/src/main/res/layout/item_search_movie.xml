<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:elevation="6dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/search_card_view"
        android:layout_width="@dimen/search_card_width"
        android:layout_height="@dimen/search_card_height"
        android:elevation="@dimen/search_card_elevation"
        app:cardCornerRadius="@dimen/search_card_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/search_movie_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/avatar_background" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/search_text_default_margin"
        android:layout_marginBottom="@dimen/search_text_default_margin"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/search_card_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="title" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/search_text_default_margin"
        android:layout_marginBottom="@dimen/search_text_default_margin"
        app:layout_constraintStart_toEndOf="@+id/search_card_view"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view"
        tools:text="name" />

    <RatingBar
        android:id="@+id/search_rating_bar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:progressTint="#FBC02D"
        android:stepSize="0.5"
        app:layout_constraintStart_toEndOf="@id/search_card_view"
        app:layout_constraintTop_toBottomOf="@id/date_text_view"
        tools:rating="3.5f" />

</androidx.constraintlayout.widget.ConstraintLayout>

