<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/actor_item_cardView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actor_card_height"
        android:layout_margin="@dimen/actor_card_margin"
        app:cardCornerRadius="@dimen/actor_card_corner_radius"
        app:cardElevation="@dimen/actor_card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/actor_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/ic_launcher_foreground" />

    </androidx.cardview.widget.CardView>

    <RatingBar
        android:id="@+id/actor_item_ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_actor_small_margin_top"
        android:progressTint="@color/rating_bar_progress_color"
        android:stepSize="0.5"
        app:layout_constraintBottom_toTopOf="@id/actor_name_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actor_item_cardView"
        tools:rating="3.5f" />

    <TextView
        android:id="@+id/actor_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_actor_small_margin_top"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actor_item_ratingBar"
        tools:text="actor name" />

</androidx.constraintlayout.widget.ConstraintLayout>